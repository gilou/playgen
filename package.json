{
  "name": "playgen-rest-service",
  "version": "0.1.0",
  "description": "A RESTful API service for managing playlists for streaming music servers like Icecast",
  "engines": {
    "npm": ">=3",
    "node": ">=6"
  },
  "author": "Mark Jeghers",
  "vendor": "Technology for People",
  "license": "(c) Mark Jeghers (Technology for People)",
  "private": true,
  "scripts": {
    "start": "cross-env NODE_ENV=development node server",
    "start:debug-server": "cross-env NODE_ENV=development node debug server",
    "start:prod": "cross-env NODE_ENV=production node server",
    "lint": "npm run lint:js",
    "lint:eslint": "eslint server.js app",
    "lint:js": "npm run lint:eslint --"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb",
    "env": {
      "node": true,
      "jest": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "rules": {
      "arrow-parens": 0,
      "arrow-body-style": 0,
      "class-methods-use-this": 0,
      "comma-dangle": [
        2,
        "always-multiline"
      ],
      "func-names": 0,
      "import/imports-first": 0,
      "import/newline-after-import": 0,
      "import/no-dynamic-require": 0,
      "import/no-extraneous-dependencies": 0,
      "import/no-named-as-default": 0,
      "import/no-unresolved": 2,
      "import/no-webpack-loader-syntax": 0,
      "import/prefer-default-export": 0,
      "indent": [
        2,
        2,
        {
          "SwitchCase": 1
        }
      ],
      "max-len": 0,
      "newline-per-chained-call": 0,
      "no-confusing-arrow": 0,
      "no-console": 0,
      "no-use-before-define": 0,
      "prefer-template": 2,
      "require-yield": 0
    }
  },
  "main": "server.js",
  "dependencies": {
    "babel-eslint": "^10.1.0",
    "body-parser": "^1.18.2",
    "express": "^4.16.3",
    "http-status-codes": "^1.3.0",
    "lodash": "^4.17.20",
    "mysql": "^2.18.1"
  },
  "devDependencies": {
    "cross-env": "^5.2.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.22.0"
  }
}
